extends layout

block content
    h1 #{title}

    form(action="" method='POST')
        div.form-group
            label(for="thisname") Genre:
            input#name.form-control(type= 'text', placeholder='Fantasy, Poetry etc.' name= 'thisname' value=(undefined=== genre ? '' : genre.name))
        button.btn.btn-primary(type= 'submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg